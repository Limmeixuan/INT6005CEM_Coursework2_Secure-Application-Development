<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".activities.PharmacistListActivity">

    <ImageView
        android:id="@+id/white_background"
        android:layout_width="370dp"
        android:layout_height="670dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white_background" />

    <!--show admin-->

    <!--Recycler View - show admins-->

    <TextView
        android:id="@+id/userTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:text="Showing All Pharmacist"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/addPharmacistBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userTv"
        android:layout_gravity="right"
        android:layout_marginTop="9dp"
        android:layout_marginStart="200dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Add Pharmacist"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminRv"
        android:layout_width="330dp"
        android:layout_height="530dp"
        android:layout_below="@+id/addPharmacistBtn"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/row_pharmacist_list" />

</RelativeLayout>